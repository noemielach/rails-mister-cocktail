 <h1>
  <%= @cocktail.name %>
</h1>

<ol>
  <% @cocktail.doses.each do |dose|  %>
  <li>
    <%= "#{dose.amount} #{dose.ingredient.name}: #{dose.description}" %>
    <%= link_to 'X', dose_path(dose),  method: :delete, data: { confirm: 'Are you sure you want to delete this plant?' } %>
  </li>
  <% end %>
</ol>

<button type="button" class="btn btn-primary">
  <%= link_to "Add Doses", new_cocktail_dose_path(@cocktail)  %>
</button>

<button type="button" class="btn btn-primary">
  <%= link_to "Back to List", cocktails_path  %>
</button>


